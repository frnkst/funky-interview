{
  "name": "retro-tech-quiz",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "test:coverage": "craco test --coverage  --watchAll=false",
    "test:badges": "yarn test:coverage && make-coverage-badge",
    "format": "yarn prettier --write .",
    "format:check": "yarn prettier --write .",
    "cypress": "cypress run --config ignoreTestFiles=\"**/screenshots.spec.ts\"",
    "cypress:screenshots": "rm -rf cypress/screenshots/screenshots.spec.ts && cypress run --spec \"cypress/integration/screenshots.spec.ts\"",
    "lighthouse-badges": "lighthouse-badges --urls https://void0.ch -o lighthouse-badges",
    "update:assets": "yarn format && yarn test:badges && yarn cypress:screenshots && yarn lighthouse-badges",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "coverageReporters": [
      "json-summary"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "@babel/parser": "^7.13.13",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-syntax-highlighter": "^15.4.3",
    "recharts": "^2.0.9"
  },
  "devDependencies": {
    "@craco/craco": "^6.1.1",
    "@tailwindcss/postcss7-compat": "^2.0.3",
    "@testing-library/dom": "^7.30.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^13.0.16",
    "@types/jest": "^26.0.22",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.3",
    "@types/react-router-dom": "^5.1.7",
    "@types/react-syntax-highlighter": "^13.5.0",
    "autoprefixer": "^9",
    "cypress": "^6.7.1",
    "enzyme": "^3.11.0",
    "jest-coverage-badges": "^1.1.2",
    "lighthouse-badges": "^1.1.4",
    "make-coverage-badge": "^1.2.0",
    "postcss": "^7",
    "prettier": "^2.2.1",
    "react-scripts": "4.0.3",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.3",
    "typescript": "^4.2.3",
    "wait-on": "^5.2.1",
    "web-vitals": "^1.1.1"
  }
}
